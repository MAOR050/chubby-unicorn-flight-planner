# Netlify Headers Configuration
# This file configures HTTP headers for proper caching

# HTML files - always check for updates
/index.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Root path - same as index.html
/
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Hashed assets - cache forever (immutable)
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Images - cache for 30 days
/images/*
  Cache-Control: public, max-age=2592000

# Icons - cache for 30 days
/*.png
  Cache-Control: public, max-age=2592000
/*.svg
  Cache-Control: public, max-age=2592000

# Service worker - never cache
/sw.js
  Cache-Control: no-cache, no-store, must-revalidate
/registerSW.js
  Cache-Control: no-cache, no-store, must-revalidate
/workbox-*.js
  Cache-Control: no-cache, no-store, must-revalidate

# Manifest - short cache
/manifest.json
  Cache-Control: public, max-age=3600
/manifest.webmanifest
  Cache-Control: public, max-age=3600